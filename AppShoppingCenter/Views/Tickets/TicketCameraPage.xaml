<ContentPage
    x:Class="AppShoppingCenter.Views.Tickets.TicketCameraPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:AppShoppingCenter.Libraries.Converters"
    xmlns:maui="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    x:Name="Page"
    Title="Voltar">

    <ContentPage.Resources>
        <converters:BarcodeArgsConverter x:Key="BarcodeArgsConverter" />
    </ContentPage.Resources>

    <Grid>

        <zxing:CameraBarcodeReaderView
            x:Name="CameraView"
            BarcodesDetected="OnBarcodesDetected"
            IsDetecting="True" />

        <Grid InputTransparent="True">
            <Border
                BackgroundColor="Transparent"
                HeightRequest="250"
                HorizontalOptions="Center"
                Stroke="orange"
                StrokeThickness="3"
                VerticalOptions="Center"
                WidthRequest="250" />
        </Grid>

    </Grid>
</ContentPage>
