<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppShoppingCenter.Views.Stores.DetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppShoppingCenter.ViewModels.Stores"
    Title="Estabelecimento"
    Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:DetailPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid>
            <Image Source="{Binding Establishment.Cover}" VerticalOptions="Start" />
            <Border
                Margin="20"
                Background="White"
                HorizontalOptions="Start"
                StrokeShape="RoundRectangle 16"
                StrokeThickness="0"
                VerticalOptions="Start">

                <Image
                    HeightRequest="32"
                    Source="back.png"
                    WidthRequest="32">

                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TapToBackCommand}" />
                    </Image.GestureRecognizers>

                </Image>
            </Border>

            <Border
                Margin="0,200,0,0"
                Background="white"
                StrokeShape="RoundRectangle 30,30,0,0">

                <Grid
                    Padding="20,20,20,0"
                    ColumnDefinitions="1*,1*,5*"
                    RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">


                    <Image
                        Grid.ColumnSpan="2"
                        Margin="10,0"
                        Source="{Binding Establishment.Logo}"
                        VerticalOptions="Start" />

                    <Label
                        Grid.Column="2"
                        Margin="50,0,0,50"
                        Style="{StaticResource PrimaryText}"
                        Text="{Binding Establishment.Name}" />

                    <Label
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Margin="0,10"
                        Style="{StaticResource SecondaryText}"
                        Text="{Binding Establishment.Description}" />

                    <Image
                        Grid.Row="2"
                        Grid.RowSpan="2"
                        Source="pin.png"
                        VerticalOptions="End"
                        WidthRequest="21" />
                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource HeadingText}"
                        Text="Localização" />
                    <Label
                        Grid.Row="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Text="{Binding Establishment.Location}" />

                    <Image
                        Grid.Row="4"
                        Grid.RowSpan="2"
                        Source="phone.png"
                        VerticalOptions="End"
                        WidthRequest="21" />
                    <Label
                        Grid.Row="4"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="0,40,0,0"
                        Style="{StaticResource HeadingText}"
                        Text="Telefone" />
                    <Label
                        Grid.Row="5"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource DetailText}"
                        Text="{Binding Establishment.Phone}" />
                </Grid>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>