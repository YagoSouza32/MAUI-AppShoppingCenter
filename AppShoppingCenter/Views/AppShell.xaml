<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppShoppingCenter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cinemas="clr-namespace:AppShoppingCenter.Views.Cinemas"
    xmlns:restaurants="clr-namespace:AppShoppingCenter.Views.Restaurants"
    xmlns:stores="clr-namespace:AppShoppingCenter.Views.Stores"
    xmlns:tickets="clr-namespace:AppShoppingCenter.Views.Tickets"
    Title="AppShoppingCenter">

    <TabBar>
        <ShellContent
            Title="Lojas"
            ContentTemplate="{DataTemplate stores:StoreListPage}"
            Icon="store.png"
            Route="stores" />

        <ShellContent
            Title="Restaurantes"
            ContentTemplate="{DataTemplate restaurants:RestaurantListPage}"
            Icon="restaurant.png"
            Route="restaurants" />

        <ShellContent
            Title="Cinema"
            ContentTemplate="{DataTemplate cinemas:CinemaListPage}"
            Icon="cinema.png"
            Route="cinemas" />

        <ShellContent
            Title="Ticket"
            ContentTemplate="{DataTemplate tickets:TicketScanPage}"
            Icon="ticket.png"
            Route="tickes" />
    </TabBar>

</Shell>
