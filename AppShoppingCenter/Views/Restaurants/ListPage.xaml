<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppShoppingCenter.Views.Restaurants.ListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:AppShoppingCenter.ViewModels.Restaurants"
    Title="Restaurantes">

    <ContentPage.BindingContext>
        <vm:ListPageViewModel x:Name="vm" />
    </ContentPage.BindingContext>

    <Grid
        Padding="24"
        RowDefinitions="50,*"
        RowSpacing="30">

        <Border StrokeShape="RoundRectangle 5">
            <Border.Stroke>
                <LinearGradientBrush EndPoint="1,1">
                    <GradientStop Offset="0.1" Color="#F5AF19" />
                    <GradientStop Offset="1.0" Color="#FF0000" />
                </LinearGradientBrush>
            </Border.Stroke>
            <Entry Placeholder="Pesquisar por restaurante" Text="{Binding TextSearch}" />
        </Border>

        <CollectionView
            Grid.Row="1"
            EmptyView="Nenhum registro encontrado"
            ItemsSource="{Binding EstablishmentsFiltered}"
            VerticalOptions="Start">
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Grid
                        Margin="0,10"
                        ColumnDefinitions="1*,3*"
                        RowDefinitions="28, 45">

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:Reference vm}, Path=TapEstablishmentGoToDetailPageCommand}" CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>

                        <Image
                            Grid.RowSpan="2"
                            Margin="0,0,15,0"
                            Source="{Binding Logo}" />
                        <Label
                            Grid.Column="1"
                            Margin="5"
                            Style="{StaticResource PrimaryText}"
                            Text="{Binding Name}" />

                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            MaxLines="2"
                            Style="{StaticResource SecondaryText}"
                            Text="{Binding Description}"
                            VerticalOptions="End" />

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>