<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppShoppingCenter.Views.Cinemas.CinemaListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page"
    Title="ListPage"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*">
        <Image
            Aspect="AspectFill"
            Source="cinemafundo.jpg"
            VerticalOptions="Start" />

        <CarouselView
            Grid.Row="1"
            Margin="0,60,0,0"
            ItemsSource="{Binding Movies}"
            PeekAreaInsets="60">

            <CarouselView.ItemsLayout>
                <LinearItemsLayout
                    ItemSpacing="{OnPlatform Default=0,
                                             WinUI=50}"
                    Orientation="Horizontal"
                    SnapPointsAlignment="Center"
                    SnapPointsType="Mandatory" />
            </CarouselView.ItemsLayout>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="{OnPlatform Default='420, 20, 60', WinUI='520, 20, 60'}">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:Reference Page}, Path=BindingContext.TapMovieGoToDetailPageCommand}" CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>

                        <Border
                            HeightRequest="{OnPlatform Default=300,
                                                       WinUI=500}"
                            StrokeShape="RoundRectangle 30"
                            StrokeThickness="0"
                            WidthRequest="{OnPlatform Default=220,
                                                      WinUI=320}">

                            <Image Aspect="Fill" Source="{Binding Cover}" />
                        </Border>

                        <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center">
                            <Image Source="{AppThemeBinding Light='clock.png', Dark='clock_light.png'}" />
                            <Label Text="{Binding Duration}" VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label
                            Grid.Row="2"
                            Margin="0,20,0,0"
                            HorizontalOptions="Center"
                            Style="{StaticResource PrimaryText}"
                            Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </Grid>
</ContentPage>
